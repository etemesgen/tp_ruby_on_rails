<div class="container mt-4">
  <h1 class="mb-4">Bonjour <%= current_user.name %> !</h1>
  <%= link_to 'Nouvelle tâche', new_task_path, class: "btn btn-success" %>

  <% if @tasks.any? %>
    <ul class="list-group">
      <% @tasks.each do |task| %>
        <li class="mt-3 mb-3 list-group-item d-flex justify-content-between align-items-center">
          <div>
            <h5 class="mb-1 <%= task.completed ? 'text-muted text-decoration-line-through' : '' %>"><%= task.title %></h5>
            <p class="mb-1 <%= task.completed ? 'text-muted' : '' %>"><%= task.description %></p>
            <small class="text-muted">
              <%= task.completed ? 'Terminé' : 'En cours' %>
            </small>
          </div>
          <div>
            <%= link_to 'Modifier', edit_task_path(task), class: "btn btn-warning btn-sm me-2" %>
            <%= link_to 'Supprimer', task_path(task), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: "btn btn-danger btn-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p>Aucune tâche n'a été trouvée.</p>
  <% end %>
</div>