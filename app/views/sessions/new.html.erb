<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h3 class="text-center">Connexion</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |form| %>
            <div class="form-group">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'johndoe@mail.com' %>
            </div>
            <div class="form-group mt-3">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control', placeholder: '6 caractÃ¨res au minimum' %>
            </div>
            <div class="form-group mt-4 d-flex justify-content-between align-items-center">
              <%= form.submit 'Se connecter', class: 'btn btn-warning btn-block' %>
              <%= link_to 'Inscription', inscription_path, class: 'btn btn-light' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>