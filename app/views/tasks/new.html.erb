<div class="container mt-4">
  <h1 class="mb-4">Nouvelle Tâche</h1>
  <%= form_with(model: @task, url: tasks_path, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :title, 'Titre' %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :description, 'Description' %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="form-check">
      <%= form.check_box :completed, class: "form-check-input" %>
      <%= form.label :completed, 'Terminée', class: "form-check-label" %>
    </div>
    <%= form.submit 'Créer Tâche', class: "btn btn-primary" %>
  <% end %>
</div>