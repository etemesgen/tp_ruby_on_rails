<div class="container">
  <h1>Profile</h1>
  <%= form_with(model: @user, method: :patch, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :email %>
      <%= form.email_field :email, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>
    <div class="form-group mt-3">
      <%= form.label :password_confirmation %>
      <%= form.password_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="form-group mt-3 d-flex justify-content-between align-items-center">
      <div class="form-group mt-3">
        <%= form.submit "Sauvegarder", class: "btn btn-warning" %>
      </div>
  <% end %>
    <%= form_with(model: @user, method: :delete, url: user_path(@user)) do |form| %>
      <%= form.submit 'Supprimer mon compte', class: 'btn btn-danger mt-3' %>
    <% end %>
    </div>
</div>