<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card mt-5">
        <div class="card-header">
          <h3 class="text-center">Inscription</h3>
        </div>
        <div class="card-body">
          <%= form_with(model: @user, local: true) do |form| %>
            <div class="form-group mt-2">
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control', placeholder: 'John' %>
            </div>
            <div class="form-group mt-2">
              <%= form.label :email %>
              <%= form.email_field :email, class: 'form-control', placeholder: 'johndoe@mail.com' %>
            </div>
            <div class="form-group mt-2">
              <%= form.label :password %>
              <%= form.password_field :password, class: 'form-control', placeholder: '6 caractères au minimum' %>
            </div>
            <div class="form-group mt-2">
              <%= form.label :password_confirmation %>
              <%= form.password_field :password_confirmation, class: 'form-control', placeholder: '6 caractères au minimum' %>
            </div>
            <div class="form-group mt-4 text-center">
              <%= form.submit 'Créer mon compte', class: 'btn btn-warning btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>